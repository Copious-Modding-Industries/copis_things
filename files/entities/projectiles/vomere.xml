<Entity name="$projectile_default">

    <Base file="data/entities/base_projectile.xml">
        <VelocityComponent gravity_y="-100"></VelocityComponent>
    </Base>

    <ProjectileComponent
        _enabled="1"
        lob_min="0.8"
        lob_max="1.0"
        speed_min="200"
        speed_max="350"
        friction="3.0"
        direction_random_rad="0.1"
        die_on_low_velocity="1"
        on_death_explode="0"
        on_death_gfx_leave_sprite="0"
        on_lifetime_out_explode="0"
        explosion_dont_damage_shooter="1"
        on_collision_die="1"
        lifetime="25"
        damage="0.3"
        velocity_sets_scale="1"
        lifetime_randomness="7"
        ragdoll_force_multiplier="0.01"
        hit_particle_force_multiplier="0.25 "
        camera_shake_when_shot="1.0"
        >
        <damage_by_type overeating="0.1"></damage_by_type>
    </ProjectileComponent>

    <ParticleEmitterComponent
        emitted_material_name="vomit"
        count_max="25"
        offset.x="0"
        offset.y="-2"
        x_pos_offset_min="-4"
        y_pos_offset_min="-4"
        x_pos_offset_max="4"
        y_pos_offset_max="4"
        x_vel_min="-10"
        x_vel_max="10"
        y_vel_min="-10"
        y_vel_max="10"
        lifetime_min="1"
        lifetime_max="3"
        create_real_particles="1"
        emit_cosmetic_particles="0"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        is_emitting="1"
        ></ParticleEmitterComponent>

    <LuaComponent
        script_source_file="mods/copis_things/files/scripts/projectiles/vomere_init.lua"
        remove_after_executed="1"
        execute_on_added="1"
        execute_every_n_frame="-1"
        ></LuaComponent>

    <VariableStorageComponent
        name="projectile_file"
        value_string="mods/copis_things/files/entites/projectiles/vomere.xml"
        ></VariableStorageComponent>
</Entity>