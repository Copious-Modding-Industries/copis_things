<Entity
    name="$projectile_default"
    tags="projectile_player,black_hole"
    >
    <Base file="data/entities/base_projectile.xml">
        <VelocityComponent
            gravity_y="0"
            air_friction="0.3"
            mass="0.1"
            terminal_velocity="50"
            ></VelocityComponent>
    </Base>

    <ProjectileComponent
        _enabled="1"
        lob_min="0.8"
        lob_max="1.0"
        speed_min="0"
        speed_max="400"
        friction="3.0"
        direction_random_rad="0"
        on_death_explode="1"
        on_death_gfx_leave_sprite="0"
        on_lifetime_out_explode="1"
        ground_collision_fx="1"
        explosion_dont_damage_shooter="1"
        on_collision_die="0"
        lifetime="10"
        damage="0.0"
        lifetime_randomness="0"
        velocity_sets_y_flip="1"
        velocity_sets_rotation="1"
        ragdoll_force_multiplier="0.01"
        hit_particle_force_multiplier="0.25 "
        camera_shake_when_shot="2.0"
        ragdoll_fx_on_collision="BLOOD_SPRAY"
        collect_materials_to_shooter="1"
        collide_with_tag="hittable"
        on_death_item_pickable_radius="10"
        shoot_light_flash_r="255"
        shoot_light_flash_g="240"
        shoot_light_flash_b="30"
        shoot_light_flash_radius="32"
		damage_every_x_frames="10"
        >
        <damage_by_type melee="0.4"></damage_by_type>
        <config_explosion
            never_cache="1"
            camera_shake="1.5"
            explosion_radius="16"
            explosion_sprite=""
            explosion_sprite_lifetime="0"
            create_cell_probability="0"
            hole_destroy_liquid="0"
            hole_enabled="1"
            damage="0"
            ray_energy="100000"
            hole_image="data/temp/explosion_hole.png"
            particle_effect="0"
            damage_mortals="1"
            physics_explosion_power.min="0.2"
            physics_explosion_power.max="0.3"
            physics_throw_enabled="1"
            shake_vegetation="1"
            sparks_count_max="3"
            sparks_count_min="1"
            sparks_enabled="0"
            material_sparks_enabled="1"
            material_sparks_count_max="1"
            material_sparks_count_min="0"
            gore_particle_count="10"
            light_fade_time="0.029"
            stains_enabled="1"
            stains_radius="1"
            is_digger="1"
            audio_enabled="0"
            ></config_explosion>
    </ProjectileComponent>

        <MagicConvertMaterialComponent
        from_material_array="ice_static,ice_radioactive_static,ice_cold_static,ice_blood_static,ice_poison_static,ice_slime_static"
        to_material_array="ice_acid_static,ice_acid_static,ice_acid_static,ice_acid_static,ice_acid_static,ice_acid_static"
        steps_per_frame="20"
        loop="1"
        is_circle="1"
        radius="20"
        ></MagicConvertMaterialComponent>
    
        <MagicConvertMaterialComponent
            from_material_array="water,     radioactive_liquid,     poison,     slime,      blood"
            to_material_array="acid,        acid,                   acid,       acid,       acid"
            steps_per_frame="20"
            loop="1"
            is_circle="1"
            radius="20"
            ></MagicConvertMaterialComponent>

    <GameAreaEffectComponent
        radius="16"
        collide_with_tag="hittable"
        frame_length="1"
        ></GameAreaEffectComponent>

    <ParticleEmitterComponent
        emitted_material_name="acid"
        gravity.y="0.0"
        lifetime_min="1"
        area_circle_sector_degrees="45" 
        lifetime_max="2"
        x_vel_min="-60"
        x_vel_max="60"
        y_vel_min="-60"
        y_vel_max="60"
        count_min="1"
        count_max="2"
        render_on_grid="0"
        fade_based_on_lifetime="1"
        cosmetic_force_create="0"
        airflow_force="6.0"
        airflow_time="0.5"
        airflow_scale="0.5"
        attractor_force="100"
        emission_interval_min_frames="1"
        emission_interval_max_frames="1"
        emit_cosmetic_particles="0"
        create_real_particles="1"
        area_circle_radius.min="0"
        area_circle_radius.max="16"
        is_emitting="1"
        ></ParticleEmitterComponent>

    <SpriteComponent
        _enabled="1"
        alpha="1"
        image_file="mods/copis_things/files/projectiles_gfx/caustic_claw.xml"
        next_rect_animation=""
        rect_animation=""
        ></SpriteComponent>

    <AudioLoopComponent
        file="data/audio/Desktop/projectiles.bank"
        event_name="player_projectiles/chainsaw/loop"
        auto_play="1"
        ></AudioLoopComponent>

    <VariableStorageComponent
        name="projectile_file"
        value_string="mods/copis_things/files/entities/projectiles/caustic_claw.xml"
        ></VariableStorageComponent>
</Entity>