<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
      gravity_y="0"
      air_friction="30"
	  mass="0.04"
	  >
    </VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.6"
    lob_max="0.6"
    speed_min="600"
    speed_max="600"
    friction="0"
    direction_random_rad="0.02"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1"
    on_collision_die="0"
    lifetime="14"
    damage="0"
    velocity_sets_scale="1"
    ragdoll_force_multiplier="0.5"
    hit_particle_force_multiplier="0.1"
	penetrate_entities="1"
	knockback_force="1"
	>
		<damage_by_type
			melee="0.04"
			>
		</damage_by_type>
		<config_explosion
			never_cache="1" 
			damage="0"
			camera_shake="0" 
			explosion_radius="0" 
			explosion_sprite="" 
			explosion_sprite_lifetime="0" 
			create_cell_material=""
			create_cell_probability="0"  
			hole_destroy_liquid="0" 
			hole_enabled="0" 
			hole_image="" 
			particle_effect="0" 
			damage_mortals="0" 
			physics_explosion_power.min="0" 
			physics_explosion_power.max="0" 
			physics_throw_enabled="0" 
			shake_vegetation="0" 
			sparks_enabled="0" 
			stains_enabled="0" 
			>
		</config_explosion>
	</ProjectileComponent>
  
  <GameAreaEffectComponent
      radius="7"
	  collide_with_tag="hittable"
      frame_length="1"
    >
  </GameAreaEffectComponent>
  
  <AudioComponent
      file="data/audio/Desktop/projectiles.snd"
      event_root="player_projectiles/bullet_arrow">
  </AudioComponent>
  
<VariableStorageComponent
	name="projectile_file"
	value_string="mods/copis_things/files/entities/projectiles/stab.xml">
</VariableStorageComponent>
	</Entity>
