<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >

		<VelocityComponent
			gravity_y = "0"
			gravity_x = "0"
			air_friction= "100"
			mass= "0" >
		</VelocityComponent>

	</Base>

	<Entity >
		<LuaComponent
			script_source_file="data/scripts/projectiles/homing_cursor.lua"
			execute_every_n_frame="1"
			>
		</LuaComponent>
	</Entity>

	<HomingComponent
		homing_targeting_coeff="480.0"
		homing_velocity_multiplier="0.83"
		detect_distance="80"
	>
	</HomingComponent>

	<ProjectileComponent 
	speed_min="30"
	speed_max="60"
	on_collision_die="0"
	on_death_explode="0"
	on_death_gfx_leave_sprite="0"
	on_lifetime_out_explode="0"
	explosion_dont_damage_shooter="0"
	lifetime="500"
	lifetime_randomness="20"
	direction_random_rad="0.8"
	muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_laser.xml"
	damage="0.3"
	bounces_left="0"
	bounce_always="0"
	bounce_energy="0.2"
	shoot_light_flash_r="190"
	shoot_light_flash_g="248"
	shoot_light_flash_b="255"
	shoot_light_flash_radius="208"
	>
	</ProjectileComponent>


	<SpriteComponent 
	alpha="1" 
	image_file="mods/copis_things/files/projectiles_gfx/seeker_bolt.xml" 
	emissive="1"
	additive="1"
	update_transform_rotation="0"
	>
	</SpriteComponent>

	<SpriteParticleEmitterComponent
	sprite_file="data/particles/spark_electric.xml"
	delay="0"
	lifetime="1"
	color.r="1" color.g="1" color.b="1" color.a="1"
	color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="0"
	velocity.x="0" velocity.y="0"
	gravity.x="0" gravity.y="10"
	velocity_slowdown="0"
	rotation="0"
	angular_velocity="0"
	use_velocity_as_rotation="0"
	scale.x="1" scale.y="1"
	scale_velocity.x="0" scale_velocity.y="0"
	emission_interval_min_frames="5"
	emission_interval_max_frames="10"
	count_min="1" 
	count_max="1"
	randomize_rotation.min="-3.1415"
	randomize_rotation.max="3.1415"
	randomize_position.min_x="-4"
	randomize_position.max_x="4"
	randomize_position.min_y="-2"
	randomize_position.max_y="2"
	>
	</SpriteParticleEmitterComponent>

	<AudioComponent
	file="data/audio/Desktop/projectiles.bank"
	event_root="player_projectiles/bullet_lightning">
	</AudioComponent>

	<VariableStorageComponent
	name="projectile_file"
	value_string="mods/copis_things/files/entities/projectiles/seeker_bolt.xml"
	>
	</VariableStorageComponent>


	<LuaComponent 
		script_source_file="mods/copis_things/files/scripts/wispy_shot.lua"
		execute_every_n_frame="1"
		>
	</LuaComponent>

</Entity>
