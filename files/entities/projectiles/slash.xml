  <GameAreaEffectComponent
      radius="18"
	  collide_with_tag="hittable"
      frame_length="1"
    >
  </GameAreaEffectComponent>
  
  <SpriteComponent 
		_enabled="1" 
		alpha="0.8" 
		image_file="mods/copis_things/files/sprites/projectiles/slash_anim.xml" 
		next_rect_animation=""
		offset_x="0" 
		offset_y="0" 
		emissive="1"
		additive="1"
		rect_animation="fireball"
		>
	</SpriteComponent>
  
  <AudioComponent
      file="data/audio/Desktop/projectiles.snd"
      event_root="player_projectiles/bullet_arrow">
  </AudioComponent>
  
 
  
<VariableStorageComponent
	name="projectile_file"
	value_string="mods/copis_things/files/entities/projectiles/slash.xml">
</VariableStorageComponent>
	</Entity>
