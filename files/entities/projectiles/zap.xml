<Entity 
  name="$projectile_default" tags="projectile_player"
   >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
		  gravity_y="0"
		  air_friction="-35"
		  mass="0.01"
		  >
		</VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.5"
    lob_max="0.7"
    speed_min="125"
    speed_max="125"
    friction="0"
    direction_random_rad="0.52453292"
    on_death_explode="0"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="0"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    on_collision_remove_projectile="0"
    lifetime="4"
    damage="0.0"
    lifetime_randomness="0"
    ragdoll_force_multiplier="0"
    hit_particle_force_multiplier="0.1"
    create_shell_casing="0"
    muzzle_flash_file=""
    shoot_light_flash_r="0"
    shoot_light_flash_g="255"
    shoot_light_flash_b="255"
    shoot_light_flash_radius="45"
    die_on_low_velocity="0"
    velocity_sets_rotation="1"
    velocity_updates_animation="1"
    velocity_sets_scale="1"
    velocity_sets_scale_coeff="0.6"
    knockback_force="0.0"
    physics_impulse_coeff="0"
    penetrate_entities="1"
     >
	<damage_by_type electricity="0.086"></damage_by_type>
    <config_explosion
        damage="0.0"
        explosion_radius="0">
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/copis_things/files/sprites/projectiles/zap.xml" 
    next_rect_animation="default"
    rect_animation="default" 
     >
  </SpriteComponent>

    <AudioComponent
        file="data/audio/Desktop/projectiles.snd"
		event_root="projectiles/poison"
    >
    </AudioComponent>
  
  <ParticleEmitterComponent 
		emitted_material_name="spark_blue"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		gravity.y="0"
		x_vel_min="-2"
		x_vel_max="2"
		y_vel_min="-2"
		y_vel_max="2"
		count_min="1"
		count_max="2"
		lifetime_min="0.02"
		lifetime_max="0.02"
		airflow_force="0.0"
		airflow_time="0.1"
		airflow_scale="0.25"
		is_trail="1"
		trail_gap="1"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		render_on_grid="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		fade_based_on_lifetime="0"
		is_emitting="1" >
	</ParticleEmitterComponent>

    <LuaComponent
		script_source_file="mods/copis_things/files/scripts/projectiles/zap.lua"
		execute_every_n_frame="1"
		>
	</LuaComponent>

    <ElectricitySourceComponent
		_tags="enabled_in_world,enabled_in_hand"
        radius="4"
		emission_interval_frames="4"
		>
    </ElectricitySourceComponent>

    <VariableStorageComponent
		name="projectile_file"
		value_string="mods/copis_things/files/entities/projectiles/zap.xml"
		>
	</VariableStorageComponent>

</Entity>

