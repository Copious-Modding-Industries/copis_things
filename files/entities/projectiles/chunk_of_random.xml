    <ProjectileComponent
        _enabled="1"
        lob_min="0.8"
        lob_max="1.0"
        speed_min="0"
        speed_max="10"
        on_death_explode="1"
        on_death_gfx_leave_sprite="0"
        on_lifetime_out_explode="1"
        explosion_dont_damage_shooter="0"
        die_on_low_velocity="1"
        damage="0"
        on_collision_die="1"
        lifetime="1"
