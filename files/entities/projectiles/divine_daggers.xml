<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="10"
			air_friction="-0.2"
			mass="0.02"
			>
		</VelocityComponent> 
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.5"
		lob_max="0.7"
		speed_min="750"
		speed_max="750"
		friction="1"
		direction_random_rad="0"
		on_death_explode="0"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="0"
		explosion_dont_damage_shooter="1"
		ground_penetration_coeff="0.2"
		on_collision_die="1"
		lifetime="40"
		damage="0"
		velocity_sets_scale="0"
		lifetime_randomness="7"
		ragdoll_force_multiplier="0.015"
		hit_particle_force_multiplier="0.3"
		muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_magic_small.xml"
		shoot_light_flash_r="160"
		shoot_light_flash_g="225"
		shoot_light_flash_b="160"
		shoot_light_flash_radius="32" 
		knockback_force="0"
		>
		<config_explosion
			never_cache="1" 
            damage="0.0"
            explosion_radius="0"
		/>
		<damage_by_type
			holy="0.04"
		/>
	</ProjectileComponent>

    <HitEffectComponent 
        effect_hit="LOAD_CHILD_ENTITY"
        value_string="mods/copis_things/files/entities/misc/effect_divine_daggers.xml"
	/>

	<!-- dense emitter -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_white"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="0"
		x_vel_max="0"
		y_vel_min="0"
		y_vel_max="0"
		gravity.y="0.0"
		count_min="1"
		count_max="4"
		lifetime_min="0.2"
		lifetime_max="0.4"
		is_trail="1"
		trail_gap="1.0"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="10.5"
		airflow_time="1.401"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<!-- sparse emitter -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_yellow"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="20"
		x_vel_max="40"
		y_vel_min="0"
		y_vel_max="0"
		gravity.y="0.0"
		count_min="1"
		count_max="2"
		lifetime_min="0.1"
		lifetime_max="1.2"
		is_trail="0"
		trail_gap="8.0"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="1.5"
		airflow_time="0.401"
		airflow_scale="0.05"
		emission_interval_min_frames="1"
		emission_interval_max_frames="10"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		is_emitting="1" >
	</ParticleEmitterComponent>
	
	<!-- very sparse emitter -->
	<ParticleEmitterComponent 
		emitted_material_name="spark_white"
		offset.x="0"
		offset.y="0"
		x_pos_offset_min="0"
		x_pos_offset_max="0"
		y_pos_offset_min="0"
		y_pos_offset_max="0"
		x_vel_min="10"
		x_vel_max="20"
		y_vel_min="0"
		y_vel_max="0"
		gravity.y="0.0"
		count_min="1"
		count_max="1"
		lifetime_min="2.4"
		lifetime_max="2.5"
		is_trail="0"
		trail_gap="8.0"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		airflow_force="0.5"
		airflow_time="0.5"
		airflow_scale="0.05"
		emission_interval_min_frames="10"
		emission_interval_max_frames="20"
		emit_cosmetic_particles="1"
		create_real_particles="0"
		is_emitting="1" >
	</ParticleEmitterComponent>

	<LightComponent 
		_enabled="1" 
		r="80"
		g="255"
		b="80"
		radius="15" >
	</LightComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="player_projectiles/bullet_light">
	</AudioComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/copis_things/files/entities/projectiles/divine_daggers.xml"
		>
	</VariableStorageComponent>

</Entity>