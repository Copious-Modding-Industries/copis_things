<Entity
    name="$projectile_default"
    tags="projectile_player"
    >

    <Base file="data/entities/base_projectile.xml">
        <VelocityComponent
            gravity_y="0"
            air_friction="0.5"
            mass="0.04"
            ></VelocityComponent>
    </Base>

    <ProjectileComponent
        _enabled="1"
        lob_min="0.1"
        lob_max="0.9"
        speed_min="100"
        speed_max="200"
        friction="1"
        direction_random_rad="0.2"
        on_death_explode="1"
        on_death_gfx_leave_sprite="0"
        on_lifetime_out_explode="0"
        explosion_dont_damage_shooter="1"
        on_collision_die="1"
        lifetime="120"
        bounce_always="1"
        bounces_left="2"
        bounce_energy="0.8"
        velocity_sets_scale="1"
        damage="0.0"
        lifetime_randomness="7"
        ragdoll_force_multiplier="0.01"
        hit_particle_force_multiplier="0.1"
        velocity_sets_rotation="1"
        muzzle_flash_file="data/entities/particles/muzzle_flashes/muzzle_flash_magic_small.xml"
        shoot_light_flash_r="70"
        shoot_light_flash_g="190"
        shoot_light_flash_b="255"
        shoot_light_flash_radius="64"
        knockback_force="0.7"
        physics_impulse_coeff="2000"
        >
        <damage_by_type ice="0.3"></damage_by_type>
        <config_explosion
            never_cache="1"
            damage="0.0"
            camera_shake="2.0"
            explosion_radius="9"
            explosion_sprite="data/particles/explosion_012_poof.xml"
            explosion_sprite_lifetime="1"
            create_cell_probability="0"
            explosion_sprite_additive="1"
            hole_destroy_liquid="0"
            hole_enabled="1"
            ray_energy="50000"
            particle_effect="0"
            damage_mortals="1"
            physics_explosion_power.min="0.1"
            physics_explosion_power.max="0.25"
            physics_throw_enabled="1"
            shake_vegetation="1"
            sparks_count_max="1"
            sparks_count_min="7"
            sparks_enabled="1"
            material_sparks_enabled="1"
            material_sparks_count_max="3"
            material_sparks_count_min="0"
            light_enabled="0"
            stains_enabled="1"
            stains_radius="1"
            spark_material="snow"
            audio_enabled="0"
            >
        >
        </config_explosion>
    </ProjectileComponent>

    <SpriteParticleEmitterComponent
		_enabled="1"
		sprite_file="data/particles/snowflake_$[1-2].xml"
		delay="0"
		lifetime="10"
		color.r="0.8" color.g="0.8" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-0.5"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="5"
		velocity_slowdown="0.5"
		rotation="0"
		angular_velocity="0"
		use_velocity_as_rotation="0"
		scale.x="1" scale.y="1"
		scale_velocity.x="0" scale_velocity.y="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="3"
		count_min="1" count_max="2"
		randomize_rotation.min="-3.1415"
		randomize_rotation.max="3.1415"
		randomize_angular_velocity.min="-1"
		randomize_angular_velocity.max="1"
		randomize_position.min_x="-2"
		randomize_position.max_x="2"
		randomize_position.min_y="-2"
		randomize_position.max_y="2"
		randomize_velocity.min_y="0"
		randomize_velocity.max_y="2"
		randomize_velocity.min_x="-2"
		randomize_velocity.max_x="2" >
    </SpriteParticleEmitterComponent>

    <SpriteComponent
        _enabled="1"
        alpha="1"
        image_file="mods/copis_things/files/projectiles_gfx/ice_orb.xml"
        next_rect_animation=""
        rect_animation="fireball"
        additive="1"
        ></SpriteComponent>

    <LightComponent
        _enabled="1"
        radius="60"
        fade_out_time="0.1"
        r="10"
        g="40"
        b="80"
        ></LightComponent>

    <HitEffectComponent
        effect_hit="LOAD_UNIQUE_GAME_EFFECT"
        value_string="data/entities/misc/effect_frozen.xml"
        ></HitEffectComponent>

        <AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="player_projectiles/freezing_gaze">
	</AudioComponent>

    <VariableStorageComponent
        name="projectile_file"
        value_string="mods/copis_things/files/entities/projectiles/ice_orb.xml"
        ></VariableStorageComponent>

    <HitboxComponent
        _enabled="1"
        aabb_min_x="-4"
        aabb_max_x="4"
        aabb_min_y="-4"
        aabb_max_y="4"
        ></HitboxComponent>

    <GenomeDataComponent herd_id="fungus"></GenomeDataComponent>

    <DamageModelComponent
        _enabled="1"
        hp="1.2"
        fire_probability_of_ignition="0"
        ui_report_damage="0"
        falling_damages="0"
        air_needed="0"
        materials_damage="0"
        ragdoll_filenames_file=""
        blood_material="snow"
        blood_multiplier="0"
        create_ragdoll="0"
        ></DamageModelComponent>
</Entity>