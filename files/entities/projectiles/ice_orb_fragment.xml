        additive="1"
        ></SpriteComponent>

    <LightComponent
        _enabled="1"
        radius="15"
        fade_out_time="0.1"
        r="2"
        g="10"
        b="20"
        ></LightComponent>

    <HitEffectComponent
        effect_hit="LOAD_UNIQUE_GAME_EFFECT"
        value_string="data/entities/misc/effect_frozen.xml"
        ></HitEffectComponent>

        <AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="player_projectiles/freezing_gaze">
	</AudioComponent>

    <VariableStorageComponent
        name="projectile_file"
        value_string="mods/copis_things/files/entities/projectiles/ice_orb_fragment.xml"
        ></VariableStorageComponent>

