<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			terminal_velocity="15000"
			air_friction="0"
			mass="0"
			limit_to_max_velocity="1"
			gravity_y="0"
		/>
	</Base>

    <!-- you can just outdo the damage values if you care, whatever -->

	<ProjectileComponent 
		_enabled="1" 
		lob_min="2.0"
		lob_max="2.0"
		speed_min="15000"
		speed_max="15000"
		friction="0.0"
		on_death_explode="0"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="0"
		ground_collision_fx="0"
		on_collision_die="0"
		penetrate_world="0"
		lifetime="5"
		muzzle_flash_file="mods/copis_things/files/entities/particles/muzzle_flashes/pain_ray_flash.xml"
		bounce_always="0"
		bounces_left="0"
		bounce_energy="1"
		damage="-9999"
		velocity_sets_scale="0"
		lifetime_randomness="0"
		ragdoll_force_multiplier="0"
		hit_particle_force_multiplier="0"
		penetrate_entities="1"
		physics_impulse_coeff="0"
		penetrate_world_velocity_coeff="0"
		ground_penetration_coeff="0"
		>
        <damage_by_type
			curse		= "-9999999"
			drill		= "-9999999"
			electricity	= "-9999999"
			explosion	= "-9999999"
			fire		= "-9999999"
			healing		= "09999999"
			ice			= "-9999999"
			melee		= "-9999999"
			overeating	= "-9999999"
			physics_hit	= "-9999999"
			poison		= "-9999999"
			projectile	= "-9999999"
			radioactive	= "-9999999"
			slice		= "-9999999"
        />
		<config_explosion
			damage="0.0"
			explosion_radius="0"
		/>
	</ProjectileComponent>
	
	<LifetimeComponent
		lifetime="5"
	/>
	
	<ParticleEmitterComponent
		emitted_material_name="spark_purple"
		offset.x="0"
		offset.y="0"
		count_min="1"
		count_max="8"
		lifetime_min="2"
		lifetime_max="2"
		airflow_force="0.6"
		airflow_time="0.1"
		airflow_scale="0.03"
		gravity.y="0.0" 
		is_trail="1"
		trail_gap="0.5"
		render_on_grid="1"
		fade_based_on_lifetime="1"
		create_real_particles="0"
		emit_cosmetic_particles="1"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		is_emitting="1"
		x_vel_max="25"
		x_vel_min="25"
	/>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/magic"
	/>

	<HitEffectComponent
		effect_hit="LOAD_UNIQUE_CHILD_ENTITY"
		value_string="mods/copis_things/files/entities/misc/status_entities/effect_pain.xml"
	/>

</Entity>
