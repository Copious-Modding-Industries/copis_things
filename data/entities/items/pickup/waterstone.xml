<Entity tags="hittable,teleportable_NOT,item_physics,item_pickup,waterstone" >
	<Base file="data/entities/base_item_projectile.xml" />

	<!-- physical presence -->
	
	<PhysicsBodyComponent 
		_tags="enabled_in_world"
		uid="1" 
		allow_sleep="1" 
		angular_damping="0" 
		fixed_rotation="0" 
		is_bullet="1" 
		linear_damping="0"
		auto_clean="0"
		on_death_leave_physics_body="1"
		hax_fix_going_through_ground="1"
	></PhysicsBodyComponent>
	
	<PhysicsImageShapeComponent 
		body_id="1"
		centered="1"
		image_file="data/items_gfx/waterstone.png"
		material="rock_box2d_hard"
	></PhysicsImageShapeComponent>
	
	<PhysicsThrowableComponent
		max_throw_speed="180"
		throw_force_coeff="1.5"
	></PhysicsThrowableComponent>

	<VelocityComponent
		_tags="enabled_in_world"
	></VelocityComponent>

	<!-- other -->

	<GameEffectComponent 
		_tags="enabled_in_hand,enabled_in_inventory"
		effect="BREATH_UNDERWATER"
		frames="-1"
	></GameEffectComponent>

	<GameEffectComponent 
		_tags="enabled_in_hand,enabled_in_inventory"
		effect="STAINS_DROP_FASTER"
		frames="-1"
	></GameEffectComponent>

