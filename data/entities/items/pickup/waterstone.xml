	<SpriteComponent
		_tags="enabled_in_hand"
		_enabled="0"
		offset_x="4"
		offset_y="4"
		image_file="data/items_gfx/waterstone.png"
	></SpriteComponent>

	<ItemComponent
		_tags="enabled_in_world"
		item_name="$item_waterstone"
		ui_description="$item_description_waterstone"
		ui_sprite="data/ui_gfx/items/waterstone.png"
		max_child_items="0"
		is_pickable="1"
		is_equipable_forced="1"
		preferred_inventory="QUICK"
